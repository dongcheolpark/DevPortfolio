{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": false,
    "noImplicitAny": false,
    //allowJs: true로 js 사용시 js의 오류 검사 여부
    "maxNodeModuleJsDepth": 0,
    "types": [
      "webpack-env",
      "jest",
      "BoardItem"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@model/*" : [
        "../models/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "../models/**/*.ts"
    , "vue.config.js"],
  "exclude": [
    "node_modules"
  ]
}
